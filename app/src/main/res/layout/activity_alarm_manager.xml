<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.martinomburajr.concepts.backgroundtasks.alarmmanager.AlarmManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/alarmManagerActivity_displayNotificationIn15s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Notification in 15s"
            android:onClick="showNotificationIn15s"/>

        <Button
            android:id="@+id/alarmManagerActivity_displayNotificationAt245Everyday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Notification at 2:45 everyday"
            android:onClick="showNotificationat245Everyday"/>

        <Button
            android:id="@+id/alarmManagerActivity_displayNotificationEvery2Min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Notification every 2 min"
            android:onClick="showNotificationEvery2Min"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
